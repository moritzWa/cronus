{
  "name": "cronus-electron-app",
  "version": "1.2.5",
  "private": true,
  "description": "An Electron application with React and TypeScript",
  "main": "./out/main/index.js",
  "author": "example.com",
  "homepage": "https://www.whatdidyougetdonetoday.ai",
  "repository": {
    "type": "git",
    "url": "https://github.com/moritzWa/whatdidyougetdonetoday-ai.git"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "bun run typecheck:node && bun run typecheck:web",
    "start": "electron-forge start",
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:with-typecheck": "bun run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "bun run build && electron-builder --dir",
    "build:win": "bun run build && electron-builder --win",
    "build:mac": "bash build-mac.sh",
    "build:mac:app-only": "bash build-mac.sh",
    "build:mac:dmg": "bash create-dmg-manual.sh",
    "build:mac:dmg-only": "DMG_NAME=\"Cronus-$(date +%Y%m%d-%H%M%S).dmg\" && TEMP_DMG_DIR=\"/tmp/cronus_dmg_temp\" && rm -rf \"$TEMP_DMG_DIR\" && mkdir -p \"$TEMP_DMG_DIR\" && cp -R \"dist/mac-arm64/Cronus.app\" \"$TEMP_DMG_DIR/\" && ln -s /Applications \"$TEMP_DMG_DIR/Applications\" && hdiutil create -volname \"Cronus\" -srcfolder \"$TEMP_DMG_DIR\" -ov -format UDZO \"dist/$DMG_NAME\" && rm -rf \"$TEMP_DMG_DIR\" && echo \"âœ… DMG created: dist/$DMG_NAME\" && open \"dist/$DMG_NAME\"",
    "build:mac:open": "bun run build:mac && open dist/Cronus-*-arm64.dmg",
    "build:linux": "electron-vite build && electron-builder --linux",
    "native-modules:rebuild": "bun run native-modules:clean && npx electron-rebuild -f -m src/native-modules/native-windows",
    "native-modules:rebuild:arm": "bun run native-modules:rebuild -- --arch arm64",
    "native-modules:clean": "rimraf src/native-modules/**/bin && rimraf src/native-modules/**/build",
    "package": "electron-forge package",
    "make": "electron-forge make"
  },
  "build": {
    "appId": "com.cronus.app",
    "productName": "Cronus",
    "files": [
      "out/",
      "!build-assets/**/*"
    ],
    "publish": [
      {
        "provider": "s3",
        "bucket": "cronusnewupdates",
        "region": "us-east-1"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "forceCodeSigning": true,
      "notarize": true,
      "timestamp": "http://timestamp.apple.com/ts01",
      "icon": "build/icon.icns",
      "extendInfo": {
        "NSAppleEventsUsageDescription": "Cronus needs to access information from your web browser to track your activity."
      }
    },
    "dmg": {
      "sign": true
    },
    "protocols": {
      "name": "Cronus Auth",
      "schemes": [
        "cronus"
      ]
    },
    "extraResources": [
      {
        "from": "src/native-modules/native-windows/build/Release/nativeWindows.node",
        "to": "native/nativeWindows.node"
      }
    ]
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-toggle-group": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@react-oauth/google": "^0.12.1",
    "@trpc/client": "^10.45.2",
    "@trpc/react-query": "^10.45.2",
    "@types/color": "^4.2.0",
    "app-builder-lib": "^26.0.12",
    "builder-util": "^26.0.11",
    "builder-util-runtime": "^9.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "color": "^5.0.0",
    "crc": "^4.3.2",
    "debug": "^4.4.1",
    "electron-app": "^1.0.0",
    "electron-updater": "^6.6.2",
    "framer-motion": "^12.12.2",
    "fs-extra": "^11.3.0",
    "jsonfile": "^6.1.0",
    "lucide-react": "^0.516.0",
    "node-addon-api": "^4.3.0",
    "posthog-js": "^1.249.5",
    "react-router-dom": "^7.6.1",
    "shared": "workspace:*",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.24.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^4.0.0",
    "@electron/notarize": "^3.0.1",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.19",
    "dotenv": "^16.5.0",
    "electron": "35.1.5",
    "electron-builder": "26.0.15",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^3.1.0",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "postcss": "^8.4.38",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.8.3",
    "vite": "^6.2.6"
  }
}
